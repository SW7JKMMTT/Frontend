                .vehicle-container {
                    display: block;
                    width: 100%;

                    overflow: auto;
                    overflow-x: hidden;

                    display: inline-flex;
                    flex-direction: column;

                    .vehicle {
                        width: 100%;

                        display: inline-flex;

                        padding: 5px 5px 10px 5px;
                        margin: 0px 0px 5px 0px;
                        
                        .vehicle-pic {
                            height: 75px;
                            width: 75px;

                            order: 0;
        
                            background-size: cover;
                            background-position: center center;

                            border-radius: 50%;
                            float: left;

                            .driver-pic {
                                height: 30px;
                                width: 30px;

                                margin: 50px 0px 0px 50px;

                                background-size: cover;
                                background-position: center center;

                                background-image: url(assets/images/default_driver.jpg);

                                border: 1px dashed $alto;

                                border-radius: 50%;
                                float: left;
                            }
                        }

                        .vehicle-text {
                            padding: 0px 0px 0px 15px;
                            order: 1;

                            display: inline-flex;
                            flex-direction: column;

                            align-items: right;
                            justify-content: center;

                            p {
                                color: $white;
                            }

                            .vehicle-name {
                                font-size: 15pt;
                            }

                            .vehicle-vintage, .vehicle-status {
                                font-size: 8pt;
                                margin: 2px 0px 0px 0px;
                            }

                            .driver-name {
                                margin: 4px 0px 0px 0px;
                                font-size: 11pt;
                            }
                        }

                        &:hover {
                            cursor: pointer;
                            background: $bar_hover;
                        }
                    }
                }
